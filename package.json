{
  "name": "@bounceapp/react-native-paypal",
  "version": "0.3.3",
  "description": "React Native wrapper to bridge PayPal iOS and Android SDK",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-paypal.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint-staged": "lint-staged --allow-empty",
    "prepare": "bob build && husky install",
    "release": "release-it",
    "docs": "yarn typedoc ./src/index.tsx --out ./docs --tsconfig ./tsconfig.json --readme none --sort source-order",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn && yarn example pods"
  },
  "keywords": [
    "expo",
    "paypal",
    "braintree",
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/Bounceapp/react-native-paypal",
  "author": "Bounce (https://usebounce.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bounceapp/react-native-paypal/issues"
  },
  "homepage": "https://github.com/Bounceapp/react-native-paypal#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{ts,tsx,jsx,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.19.1",
    "@commitlint/config-conventional": "17.3.0",
    "@react-native-community/eslint-config": "3.2.0",
    "@release-it/conventional-changelog": "5.1.1",
    "@types/eslint": "8.4.10",
    "@types/eslint-plugin-prettier": "3.1.0",
    "@types/jest": "28.1.8",
    "@types/prettier": "2.7.1",
    "@types/react": "17.0.48",
    "@types/react-native": "0.70.8",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "commitlint": "17.3.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-native": "4.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.2",
    "jest": "28.1.3",
    "lint-staged": "13.1.0",
    "pod-install": "0.1.38",
    "prettier": "2.8.1",
    "react": "17.0.2",
    "react-native": "0.68.2",
    "react-native-svg": "12.4.3",
    "react-native-builder-bob": "0.20.2",
    "release-it": "15.5.1",
    "typedoc": "0.23.21",
    "typescript": "4.9.3"
  },
  "resolutions": {
    "@types/react": "17.0.48",
    "@types/react-native": "0.70.8",
    "shell-quote": ">=1.7.3"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-svg": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
